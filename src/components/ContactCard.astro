---
const { icon, url, url_name } = Astro.props;
import { Icon } from "astro-icon/components";
---

<a 
  target="_blank" 
  href={url}
  rel="noopener noreferrer"
  aria-label={`${url_name} (opens in new tab)`}
>
  <button class="btn btn-outline btn-md mr-2" type="button">
    <Icon name={icon} class="w-6 h-6" aria-hidden="true" />
    {url_name}
  </button>
</a>
