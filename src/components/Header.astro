---
import { Icon } from "astro-icon/components";
import * as about from "../pages/about/about.md";
const resumeUrl = "/MyResume.pdf";
const heroHighlights = [
  "Production-ready React & Next.js apps",
  "API design with Node, Express & PostgreSQL",
  "Accessible design systems & DX tooling"
];
---

<header class="mx-auto pt-6 pb-4 relative fade-in-up w-[95vw] max-w-3xl px-4">
  <div class="rounded-3xl border border-white/10 dark:border-white/5 bg-base-100/50 backdrop-blur-xl shadow-xl space-y-6 relative overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-br from-white/5 to-transparent pointer-events-none"></div>
    <div class="relative z-10 p-6 space-y-6">
    <div class="flex flex-col gap-6 md:flex-row md:items-center md:justify-between">
      <article class="flex flex-col sm:flex-row items-center gap-4 w-full">
        <div
          class="profile-tilt-wrapper flex-shrink-0 w-24 md:w-28 rounded-full shadow-lg ring-4 ring-primary/20 hover:ring-primary/40 hover:ring-8 transition-all duration-500 overflow-visible bg-gradient-to-br from-primary/20 to-secondary/20 p-1 cursor-pointer"
          data-tilt-profile
        >
          <div class="profile-inner relative rounded-full overflow-hidden">
            <img
              alt={`${about.frontmatter.name} profile picture`}
              src="/profile.webp"
              class="grayscale-[30] hover:grayscale-0 transition-all duration-500 rounded-full w-full h-full object-cover"
              width="112"
              height="112"
              loading="eager"
              decoding="async"
              fetchpriority="high"
            />
            <!-- Glow overlay -->
            <div class="absolute inset-0 rounded-full opacity-0 hover:opacity-100 transition-opacity duration-300 pointer-events-none" style="background: radial-gradient(circle at var(--glow-x, 50%) var(--glow-y, 50%), oklch(var(--p) / 0.4), transparent 60%);"></div>
          </div>
        </div>
        <div class="text-center sm:text-left">
          <div class="flex flex-wrap justify-center sm:justify-start items-center gap-3 mb-3">
            <h1 class="text-3xl md:text-4xl font-extrabold tracking-tight text-base-content">
              {about.frontmatter.name}
            </h1>
            <div class="badge badge-sm badge-primary/20 text-primary border-primary/30 text-xs font-medium px-3 py-1">
              {about.frontmatter.pronouns}
            </div>
          </div>
          <h2 class="text-lg md:text-xl mb-2 text-base-content font-semibold flex items-center gap-2">
            <span class="typewriter" id="typewriter-text">{about.frontmatter.designation}</span>
            <span class="cursor-blink">|</span>
          </h2>
          <div class="flex items-center justify-center sm:justify-start mt-1 text-secondary">
            <Icon name="carbon:location" class="w-4 h-4 mr-1" aria-hidden="true" />
            <p class="text-sm" aria-label={`Location: ${about.frontmatter.location}`}>{about.frontmatter.location}</p>
          </div>
        </div>
      </article>
      <label 
        for="theme-toggle"
        class="flex items-center justify-center self-start gap-2 rounded-full border border-base-300 px-3 py-2 bg-base-100/60 cursor-pointer touch-manipulation active:scale-95 transition-transform duration-150"
        aria-label="Toggle dark mode"
      >
        <Icon name="carbon:moon" class="w-4 h-4" aria-hidden="true" />
        <input
          type="checkbox"
          data-toggle-theme="black,lofi"
          data-act-class="ACTIVECLASS"
          class="toggle toggle-sm mx-1 bg-secondary theme-toggle-input"
          aria-label="Toggle dark mode"
          role="switch"
          id="theme-toggle"
        />
        <Icon name="carbon:light" class="w-4 h-4" aria-hidden="true" />
      </label>
    </div>
    <section class="space-y-5 text-left">
      <article class="prose prose-sm md:prose max-w-none text-base-content/80 leading-relaxed">
        <Fragment set:html={about.compiledContent()} />
      </article>
      <div class="flex flex-wrap gap-2">
        {heroHighlights.map((item) => (
          <span class="px-3 py-1.5 rounded-full text-xs md:text-sm font-medium bg-primary/10 text-primary border border-primary/20">
            {item}
          </span>
        ))}
      </div>
      <div class="flex flex-wrap gap-3">
        <a
          href={resumeUrl}
          target="_blank"
          rel="noopener noreferrer"
          class="btn btn-outline btn-sm md:btn-md gap-2 group relative resume-download-btn"
          aria-label="Download resume PDF (opens in new tab)"
          id="resume-btn"
        >
          <Icon name="carbon:document-pdf" class="w-4 h-4 group-hover:animate-bounce" aria-hidden="true" />
          Resume
          <span 
            id="download-counter" 
            class="badge badge-xs badge-primary absolute -top-2 -right-2 opacity-0 group-hover:opacity-100 transition-opacity duration-300 text-[10px] font-bold"
            title="Total downloads"
          >
            0
          </span>
        </a>
      </div>
    </section>
    </div>
  </div>
    </div>
  </div>
</header>

<script>
  const typewriter = document.getElementById('typewriter-text');
  if (typewriter) {
    const text = typewriter.textContent || '';
    const length = text.length;
    
    typewriter.style.width = 'auto';
    typewriter.style.animation = 'none';
    const width = typewriter.offsetWidth;
    
    typewriter.style.setProperty('--typewriter-width', `${width}px`);
    typewriter.style.setProperty('--typewriter-steps', length.toString());
    
    void typewriter.offsetWidth;
    typewriter.style.width = '0';
    typewriter.style.animation = `typing 3.5s steps(${length}, end) forwards`;
  }

  const resumeBtn = document.getElementById('resume-btn');
  const counterEl = document.getElementById('download-counter');
  
  if (resumeBtn && counterEl) {
    const getCount = () => parseInt(localStorage.getItem('resumeDownloads') || '0');
    const updateDisplay = (count: number) => {
      counterEl.textContent = count > 999 ? '999+' : count.toString();
    };
    
    updateDisplay(getCount());
    
    resumeBtn.addEventListener('click', () => {
      const newCount = getCount() + 1;
      localStorage.setItem('resumeDownloads', newCount.toString());
      updateDisplay(newCount);
      
      counterEl.classList.add('animate-ping');
      setTimeout(() => counterEl.classList.remove('animate-ping'), 300);
    });
  }

  const profileWrapper = document.querySelector('[data-tilt-profile]') as HTMLElement;
  if (profileWrapper) {
    const inner = profileWrapper.querySelector('.profile-inner') as HTMLElement;
    
    profileWrapper.addEventListener('mousemove', (e: MouseEvent) => {
      const rect = profileWrapper.getBoundingClientRect();
      const x = e.clientX - rect.left;
      const y = e.clientY - rect.top;
      const centerX = rect.width / 2;
      const centerY = rect.height / 2;
      
      const rotateX = (y - centerY) / 5;
      const rotateY = (centerX - x) / 5;
      
      profileWrapper.style.transform = `perspective(500px) rotateX(${rotateX}deg) rotateY(${rotateY}deg) scale(1.1)`;
      
      if (inner) {
        inner.style.setProperty('--glow-x', `${(x / rect.width) * 100}%`);
        inner.style.setProperty('--glow-y', `${(y / rect.height) * 100}%`);
      }
    });
    
    profileWrapper.addEventListener('mouseleave', () => {
      profileWrapper.style.transform = 'perspective(500px) rotateX(0) rotateY(0) scale(1)';
    });
  }
</script>

<style>
  .typewriter {
    display: inline-block;
    overflow: hidden;
    white-space: nowrap;
    margin: 0;
    width: 0;
    /* Animation is set via JS */
  }

  .cursor-blink {
    animation: blink 1s step-end infinite;
  }

  @keyframes typing {
    from { width: 0 }
    to { width: var(--typewriter-width) }
  }

  @keyframes blink {
    from, to { opacity: 1 }
    50% { opacity: 0 }
  }

  /* Profile tilt effect */
  .profile-tilt-wrapper {
    transform-style: preserve-3d;
    transition: transform 0.15s ease-out, ring 0.3s ease, box-shadow 0.3s ease;
  }
  
  .profile-tilt-wrapper:hover {
    box-shadow: 
      0 20px 40px -10px oklch(var(--p) / 0.3),
      0 10px 20px -5px oklch(var(--bc) / 0.1);
  }

  .theme-toggle-input {
    -webkit-tap-highlight-color: transparent;
    /* Let Chromium handle transitions naturally */
  }
  
  /* Ensure smooth toggle animation on mobile */
  @media (max-width: 768px) {
    label[for="theme-toggle"] {
      -webkit-tap-highlight-color: transparent;
      user-select: none;
      -webkit-user-select: none;
    }
  }
  
  /* Prevent double-tap zoom on toggle */
  label[for="theme-toggle"] {
    touch-action: manipulation;
    -webkit-touch-callout: none;
  }
</style>
