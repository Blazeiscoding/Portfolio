---
import { Icon } from "astro-icon/components";
const getYear = () => new Date().getFullYear().toString();
---

<footer class="flex flex-col justify-center items-center bg-transparent py-8 gap-4 relative">
  <div class="absolute top-0 left-1/2 -translate-x-1/2 w-full max-w-3xl h-[1px] bg-gradient-to-r from-transparent via-base-content/10 to-transparent"></div>
  <div class="absolute top-0 left-1/2 -translate-x-1/2 w-1/2 h-1 bg-gradient-to-r from-transparent via-primary/20 to-transparent blur-sm"></div>
  <div class="flex gap-4">
    <a 
      href="https://github.com/Blazeiscoding" 
      target="_blank" 
      rel="noopener noreferrer"
      class="btn btn-ghost btn-circle btn-sm hover:bg-primary/10 hover:text-primary transition-colors"
      aria-label="GitHub"
    >
      <Icon name="carbon:logo-github" class="w-5 h-5" />
    </a>
    <a 
      href="https://linkedin.com/in/nikhil-rathore" 
      target="_blank" 
      rel="noopener noreferrer"
      class="btn btn-ghost btn-circle btn-sm hover:bg-primary/10 hover:text-primary transition-colors"
      aria-label="LinkedIn"
    >
      <Icon name="carbon:logo-linkedin" class="w-5 h-5" />
    </a>
    <a 
      href="mailto:contact@nikhilrathore.com" 
      class="btn btn-ghost btn-circle btn-sm hover:bg-primary/10 hover:text-primary transition-colors"
      aria-label="Email"
    >
      <Icon name="carbon:email" class="w-5 h-5" />
    </a>
  </div>
  
  <div class="flex items-center gap-2 text-sm text-base-content/60 font-light">
    <p>&copy; {getYear()} Nikhil Rathore</p>
    <span class="w-1 h-1 rounded-full bg-base-content/30"></span>
    <div class="flex items-center gap-1">
      <span>Made in</span>
      <img
        class="rounded-sm w-4 h-3 shadow-sm"
        src="/in.png"
        alt="India"
        width="16"
        height="12"
        loading="lazy"
      />
    </div>
  </div>
</footer>
