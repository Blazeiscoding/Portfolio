---
import { Icon } from "astro-icon/components";

interface Skill {
  name: string;
  icon: string;
  category: "Frontend" | "Backend" | "Database" | "Tools" | "Language";
}

const skills: Skill[] = [
  { name: "TypeScript", icon: "carbon:script", category: "Language" },
  { name: "JavaScript", icon: "carbon:code", category: "Language" },
  
  { name: "React", icon: "carbon:application", category: "Frontend" },
  { name: "Next.js", icon: "carbon:arrow-right", category: "Frontend" },
  { name: "Tailwind CSS", icon: "carbon:code", category: "Frontend" },
  { name: "ShadCN", icon: "carbon:layers", category: "Frontend" },
  
  { name: "Node.js", icon: "carbon:application", category: "Backend" },
  { name: "Express.js", icon: "carbon:application", category: "Backend" },
  { name: "RESTful APIs", icon: "carbon:api", category: "Backend" },
  
  { name: "PostgreSQL", icon: "carbon:data-base", category: "Database" },
  { name: "MongoDB", icon: "carbon:data-base", category: "Database" },
  
  { name: "Vercel", icon: "carbon:cloud", category: "Tools" },
  { name: "Git", icon: "carbon:logo-github", category: "Tools" },
];

const categories = ["Language", "Frontend", "Backend", "Database", "Tools"] as const;
---

<div class="skills-container">
  {categories.map((category) => {
    const categorySkills = skills.filter((skill) => skill.category === category);
    if (categorySkills.length === 0) return null;
    
    return (
      <div class="skill-category mb-6">
        <h3 class="text-lg font-bold mb-4 text-base-content flex items-center gap-2">
          <span class="w-1 h-6 bg-primary rounded-full"></span>
          {category}
        </h3>
        <div class="flex flex-wrap gap-2.5">
          {categorySkills.map((skill) => (
            <div
              class="skill-badge group flex items-center gap-2 px-4 py-2.5 rounded-lg border border-white/10 dark:border-white/5 bg-base-100/40 backdrop-blur-sm hover:border-primary/50 hover:shadow-[0_0_15px_rgba(var(--p),0.3)] transition-all duration-300 cursor-default stagger-item relative overflow-hidden"
              data-skill={skill.name}
            >
              <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white/10 to-transparent translate-x-[-100%] shine-effect pointer-events-none"></div>
              <Icon 
                name={skill.icon} 
                class="w-5 h-5 text-primary group-hover:scale-125 group-hover:rotate-6 transition-all duration-300 relative z-10" 
                aria-hidden="true"
              />
              <span class="text-sm font-medium text-base-content relative z-10">{skill.name}</span>
            </div>
          ))}
        </div>
      </div>
    );
  })}
</div>

<style>
  .skill-badge:hover {
    transform: translateY(-3px) scale(1.02);
  }

  @keyframes shine {
    100% {
      transform: translateX(100%);
    }
  }

  .group:hover .shine-effect {
    animation: shine 1s;
  }
</style>

